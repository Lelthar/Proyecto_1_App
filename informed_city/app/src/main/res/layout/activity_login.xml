<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.bryan.informedcity.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btIniciaSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btRegis"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp"
            android:background="#194A43"
            android:onClick="inicioSesion"
            android:text="Iniciar Sesión"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="43dp"
            android:layout_marginTop="33dp"
            android:background="#194A43"
            android:text="Registrarse"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="33dp"
            android:text="Bienvenido (a). Inicie Sesión para continuar."
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edtemail"
            android:layout_centerVertical="true"
            android:ems="10"
            android:layout_marginTop="33dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edtContra"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="33dp"
            android:text="Contraseña" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="33dp"
            android:text="Email" />

        <EditText
            android:id="@+id/edtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_below="@+id/textView3"
            android:ems="10"
            android:inputType="textEmailAddress" />
    </RelativeLayout>

</LinearLayout>
