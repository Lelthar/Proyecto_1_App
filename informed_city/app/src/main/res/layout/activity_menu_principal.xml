<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gerald.informed_city.MenuPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="9dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnProgramar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="60dp"
                android:onClick="btnCrearClick"
                android:text="Crear\n Evento"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btnProg"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="btnProgramarClick"
                android:text="Programar Evento"
                android:textSize="10sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMapEventos"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_marginRight="60dp"
                android:layout_height="100dp"
                android:onClick="btnMapaClick"
                android:text="Eventos Cercanos"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btnMuro"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="btnInstitucionesClick"
                android:text="Anuncios Instituciones"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnConf"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Herramientas"
                android:layout_marginRight="60dp"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btnCuenta"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="btnCuentaClick"
                android:text="Mi Cuenta"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button10"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="btnAboutClick"
                android:layout_marginRight="60dp"
                android:text="Acerca de "
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btnSalir"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/btnCuenta"
                android:layout_alignTop="@+id/button10"
                android:onClick="ExitOnClick"
                android:text="Salir"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
